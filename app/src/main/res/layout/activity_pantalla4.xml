<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ippc"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_arriba"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="170dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/arriba"
            >
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_izquierda"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginStart="95dp"
            android:background="@drawable/izq"
            >
        </Button>

        <Button
            android:id="@+id/btn_derecha"
            android:layout_width="80dp"
            android:layout_height="90dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/der"
            >
        </Button>

        <Button
            android:id="@+id/btn_disparar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/luz"
            >
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/btn_abajo"
            android:layout_width="90dp"
            android:layout_height="80dp"
            android:layout_marginStart="170dp"
            android:background="@drawable/abajo"
            >
        </Button>

    </LinearLayout>



</LinearLayout>